<% if user_signed_in? %> 
  <h2>Articles  </h2> <%= link_to 'Create Article',new_article_path %>
  <% for article in @articles %>
    <div class="card cardLayout">
    <h5 class="card-header"><%= article.title  %></h5>
    <div class="card-body cardBodyLayout">
      <div>
      <p class="card-text"><%= article.body  %></p>
        <%= link_to 'View',article_path(article)%>
      </div>
      <div>
        <%= image_tag article.image, alt: 'Article Image',class: 'imgthumbnail' %>
      </div>
    </div>
  </div>
  <% end %>  
<% end %>
